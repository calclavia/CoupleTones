<?xml version="1.0" encoding="utf-8"?>
<manifest package="group50.coupletones"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="CoupleTones"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
        </activity>

        <service android:name=".network.GcmListener"></service>

        <receiver
            android:name=".network.GcmReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="group50.coupletones"/>
            </intent-filter>
        </receiver>

        <service android:name=".network.GcmMessageHandler"></service>
    </application>
</manifest>

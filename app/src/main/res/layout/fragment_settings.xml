<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MainActivity">

        <!-- Toolbar Settings for Settings Page -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true">

            <ImageView
                android:src="@drawable/settings_title"
                android:layout_marginLeft="?attr/actionBarSize"
                android:layout_marginRight="?attr/actionBarSize"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center" />

        </android.support.v7.widget.Toolbar>

        <!-- Cardview for Your Profile -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/card_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="240dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginTop="72dp"
                                            card_view:cardCornerRadius="0dp"
                                            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- MY PROFILE -->
                    <TextView
                        android:id="@+id/my_profile_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MY PROFILE"
                        android:textColor="@color/subtitleColor"
                        android:textSize="16sp" />

                    <!-- Name: -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/your_name_header"
                        android:text="Name:"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/my_profile_header"
                        android:layout_marginTop="30dp"
                        />

                    <!-- Your name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/your_name"
                        android:text="Joanne Cho"
                        android:textColor="@color/subtitleColor"
                        android:textSize="18sp"
                        android:layout_below="@+id/your_name_header"
                        android:layout_marginTop="6dp"
                        />

                    <!-- Google Account: -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/your_account_header"
                        android:text="Google Account:"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/your_name"
                        android:layout_marginTop="30dp"
                        />

                    <!-- Your email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/your_email"
                        android:text="joannesemailyay@gmail.com"
                        android:textColor="@color/subtitleColor"
                        android:textSize="14sp"
                        android:layout_below="@+id/your_account_header"
                        android:layout_marginTop="6dp"
                        />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Cardview for Partner's Profile -->

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/card_view_2"
                                            android:layout_width="match_parent"
                                            android:layout_height="240dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginTop="320dp"
                                            android:layout_marginBottom="10dp"
                                            card_view:cardCornerRadius="0dp"
                                            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- PARTNER'S PROFILE -->
                    <TextView
                        android:id="@+id/partners_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PARTNER'S PROFILE"
                        android:textColor="@color/subtitleColor"
                        android:textSize="16sp" />

                    <!-- Name: -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/partner_name_header"
                        android:text="Name:"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/partners_profile_text"
                        android:layout_marginTop="30dp"
                        />

                    <!-- Partner name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/partner_name"
                        android:text="Cody Pham"
                        android:textColor="@color/subtitleColor"
                        android:textSize="18sp"
                        android:layout_below="@+id/partner_name_header"
                        android:layout_marginTop="6dp"
                        />

                    <!-- Google Account: -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/partner_account_header"
                        android:text="Google Account:"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/partner_name"
                        android:layout_marginTop="30dp"
                        />

                    <!-- Partner email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/partner_email"
                        android:text="LOLcodyisdumb@gmail.com"
                        android:textColor="@color/subtitleColor"
                        android:textSize="14sp"
                        android:layout_below="@+id/partner_account_header"
                        android:layout_marginTop="6dp"
                        />

                    <!-- Edit Partner Button -->
                    <ImageButton
                        android:id="@+id/edit_partner_button"
                        android:src="@drawable/pencil_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="#00000000"
                        android:layout_alignTop="@+id/card_view_2"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Log out Button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/actionBarColor"
            android:id="@+id/logout_button"
            android:textAllCaps="false"
            android:minWidth="345dp"
            android:minHeight="40dp"
            android:textSize="16dp"
            android:background="@drawable/roundedbutton"
            android:layout_below="@+id/card_view_2"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="12dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</ScrollView>

